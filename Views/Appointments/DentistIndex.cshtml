@model IEnumerable<ToothSlot.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-4">
    <h2>My Appointments</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>No appointments scheduled</h4>
            <p>You don't have any patient appointments scheduled yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Patient</th>
                        <th>Service</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                            <td>@appointment.StartTime.ToString(@"hh\:mm tt")</td>
                            <td>@appointment.Patient.FirstName @appointment.Patient.LastName</td>
                            <td>@appointment.Service.Name</td>
                            <td>@appointment.Service.DurationMinutes min</td>
                            <td>
                                @if (appointment.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else if (appointment.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (appointment.Status == "Completed")
                                {
                                    <span class="badge bg-primary">Completed</span>
                                }
                                else if (appointment.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@appointment.Status</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(appointment.Notes))
                                {
                                    <span class="small">@appointment.Notes</span>
                                }
                                else
                                {
                                    <span class="text-muted">â€”</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
