@model IEnumerable<ToothSlot.Models.Appointment>

@{
    ViewData["Title"] = "Upcoming Appointments";
}

<div class="container mt-4">
    <h2>Upcoming Appointments (Next 7 Days)</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No upcoming appointments in the next 7 days.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Patient</th>
                        <th>Service</th>
                        <th>Duration</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                            <td>@appointment.StartTime.ToString(@"hh\:mm tt")</td>
                            <td>@appointment.Patient.FirstName @appointment.Patient.LastName</td>
                            <td>@appointment.Service.Name</td>
                            <td>@appointment.Service.DurationMinutes min</td>
                            <td>
                                @if (appointment.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else if (appointment.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@appointment.Status</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>